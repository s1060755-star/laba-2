# Production Flask Configuration
# ВАЖЛИВО: Змініть FLASK_SECRET на унікальний безпечний ключ!
FLASK_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
FLASK_ENV=production
FLASK_DEBUG=0

# Database
DATABASE_PATH=/data/my_database.db

# Server Configuration
FLASK_RUN_PORT=5000
FLASK_RUN_HOST=0.0.0.0

# Gunicorn Settings (for production deployment)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120